<section class=“admin-categories-index”>

 <header class=“page-header”>
   <h1>Admin &raquo; All Categories</h1>
 </header>

 <div class=“well”>
   <%= link_to ‘+ New Categories’, [:new, :admin, :category], class: ‘btn btn-info’ %>
 </div>

 <div class=“panel panel-default products”>

   <table class=“table table-bordered”>
     <% @categories.each {|category| %>
       <tr><td><%= link_to category.name, category %></td></tr>
     <% } %>
   </table>

 </div>

</section>